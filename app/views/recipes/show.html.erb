  <li class="column">
    <h3><%= @my_recipe.lable %></h3>
    <%= image_tag(@my_recipe.image, :alt => "recipe image") %>
    <p><%= link_to "Link to Original Recipe", @my_recipe.url  %></p>
    <p>Ingredients: <%= @my_recipe.ingredients %></p>
